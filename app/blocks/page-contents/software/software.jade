//- Шаблон
extends ../../layout-jade/layout

//- Переменные 
block variables
	- var title = 'Програмное обеспечение'
	- var site = 'site.ru'
	- var link = 'https://my-site.ru'
	- var description = 'Описание страницы'
	- var siteName = 'site name'
	- var keywords = 'Кючевые слова'
	- var body = 'is-software'

//- Контент
block content-page
	// software-content
	main(class="software-content", role="main")
		section.software 
			.container 
				.software__content
					h4 Графические редакторы
					ul 
						li Photoshop 
						li Avocode
					h4 Текстовые редакторы
					ul 
						li visual studio code или sublime text 3
					h4 Программы 
					ul 
						li Gulp(таск менеджер)
						li node.js 
							a(href="https://nodejs.org/en/") Скачать
						li git
							a(href="https://git-scm.com/book/ru/v2/%D0%92%D0%B2%D0%B5%D0%B4%D0%B5%D0%BD%D0%B8%D0%B5-%D0%A3%D1%81%D1%82%D0%B0%D0%BD%D0%BE%D0%B2%D0%BA%D0%B0-Git")  Скачать
						li filezila(FTP клиент) 
							a(href="https://filezilla.ru/") Скачать
	// End software-content

